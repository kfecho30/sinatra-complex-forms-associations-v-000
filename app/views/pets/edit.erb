<h1>Update Pet</h1>
<form action="/pets/<%=@pet.id%>" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet_name" id="pet_name" value="<%=@pet.name">

  <br></br>
  <label>Choose an Existing Owner:</label>
  <%@owners.each do |owner|%>
    <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>"  <%='checked' if @pet.owner == owner %>><%=owner.name%>><%=owner.name%></input>
<%end%>
    <br></br>

    <label>or, create a new owner:</label>
   <br></br>
   <label>name:</label>
     <input type="text" name="owner_name"></input>
   <br></br>

  <input type="submit" value="Create Pet">
</form>
